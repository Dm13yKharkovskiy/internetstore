<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UserRegistrationServlet</servlet-name>
        <servlet-class>controller.UserRegistrationServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AllUsersServlet</servlet-name>
        <servlet-class>controller.UsersGetAllServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllUsersServlet</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductAddServlet</servlet-name>
        <servlet-class>controller.ProductAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductAddServlet</servlet-name>
        <url-pattern>/add-product</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AllProductsServlet</servlet-name>
        <servlet-class>controller.ProductsCatalogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllProductsServlet</servlet-name>
        <url-pattern>/catalog</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserSingInServlet</servlet-name>
        <servlet-class>controller.UserSingInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserSingInServlet</servlet-name>
        <url-pattern>/sing-in</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddProductToCartServlet</servlet-name>
        <servlet-class>controller.ProductAddToCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProductToCartServlet</servlet-name>
        <url-pattern>/add-cart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RemoveProductServlet</servlet-name>
        <servlet-class>controller.ProductRemoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveProductServlet</servlet-name>
        <url-pattern>/remove-product</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductEditServlet</servlet-name>
        <servlet-class>controller.ProductEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductEditServlet</servlet-name>
        <url-pattern>/product/edit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RemoveUserServlet</servlet-name>
        <servlet-class>controller.UserRemoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveUserServlet</servlet-name>
        <url-pattern>/users/remove</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>controller.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OrderConfirmServlet</servlet-name>
        <servlet-class>controller.OrderConfirmServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderConfirmServlet</servlet-name>
        <url-pattern>/confirm-order</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CartRemoveProductServlet</servlet-name>
        <servlet-class>controller.CartRemoveProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartRemoveProductServlet</servlet-name>
        <url-pattern>/cart/remove-product</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OrderCreateServlet</servlet-name>
        <servlet-class>controller.OrderCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderCreateServlet</servlet-name>
        <url-pattern>/create-order</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OrdersAllServlet</servlet-name>
        <servlet-class>controller.OrdersAllServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrdersAllServlet</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CodeSendToEmailServlet</servlet-name>
        <servlet-class>controller.CodeSendToEmailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CodeSendToEmailServlet</servlet-name>
        <url-pattern>/send-confirm-code</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SingOutServlet</servlet-name>
        <servlet-class>controller.SingOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SingOutServlet</servlet-name>
        <url-pattern>/sing-out</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>resourceVersion</param-name>
        <param-value>1</param-value>
    </context-param>
</web-app>
